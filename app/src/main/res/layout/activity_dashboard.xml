<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Metrics Section -->
    <LinearLayout
        android:id="@+id/metricsSection"
        android:orientation="horizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:gravity="center">

        <TextView
            android:id="@+id/tvStreak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Streak: 5ðŸ”¥"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginEnd="24dp" />

        <TextView
            android:id="@+id/tvTotalWorkouts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total: 28"
            android:textSize="18sp" />
    </LinearLayout>

    <!-- Streak Badge (Duolingo-style) -->
    <TextView
        android:id="@+id/tvStreakBadge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ðŸ”¥ 7-Day Streak"
        android:textStyle="bold"
        android:textSize="20sp"
        android:background="@drawable/streak_badge_background"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/metricsSection"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="16dp"/>

    <!-- Calendar Section (shows workout days + planned days) -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerCalendar"
        android:layout_width="0dp"
        android:layout_height="300dp"
        app:layout_constraintTop_toBottomOf="@id/tvStreakBadge"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="8dp" />

    <!-- Weekly Schedule Selection -->
    <TextView
        android:id="@+id/tvScheduleLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Planned workout days:"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/recyclerCalendar"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"/>

    <LinearLayout
        android:id="@+id/llWeekdays"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/tvScheduleLabel"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:gravity="center">

        <!-- Example: One toggle per weekday -->
        <ToggleButton android:id="@+id/tgMon" android:textOn="Mon" android:textOff="Mon" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <ToggleButton android:id="@+id/tgTue" android:textOn="Tue" android:textOff="Tue" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <ToggleButton android:id="@+id/tgWed" android:textOn="Wed" android:textOff="Wed" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <ToggleButton android:id="@+id/tgThu" android:textOn="Thu" android:textOff="Thu" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <ToggleButton android:id="@+id/tgFri" android:textOn="Fri" android:textOff="Fri" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <ToggleButton android:id="@+id/tgSat" android:textOn="Sat" android:textOff="Sat" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <ToggleButton android:id="@+id/tgSun" android:textOn="Sun" android:textOff="Sun" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    </LinearLayout>

    <!-- Quick Log: "Did you work out today?" -->
    <Button
        android:id="@+id/btnLogWorkout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log Today's Workout"
        app:layout_constraintTop_toBottomOf="@id/llWeekdays"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
